<head>
  {{! Document Settings }}  
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">

  {{! Page Meta }}
  <title>{{meta_title}}</title>
  <meta name="description" content="{{meta_description}}" />

  {{! Favicon }}
  <link rel="shortcut icon" href="/assets/images/icons/favicon.png" />
  
  {{! RSS }}
  <link rel="alternate" type="application/rss+xml" title="{{@blog.title}} Â» Feed" href="/rss">

  {{! Styles'n'Scripts }}
  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700,300italic,400italic,700italic' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Vidaloka' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/assets/css/foundation.css">
  <link rel="stylesheet" href="/assets/css/style.css">
  

  <script src="/assets/js/vendor/custom.modernizr.js"></script>

  {{ghost_head}}
</head>

<body class="{{body_class}}">

    <div class="header" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>

    {{! Top Bar }}
  <div class="top">
    <div class="row">
     <div class="small-12 columns">
      <ul class="social">
      <li><a href="" title="facebook" target="_blank"><img src="/assets/images/icons/facebook.png" alt="facebook"></a></li>
      <li><a href="" title="twitter" target="_blank"><img src="/assets/images/icons/twitter.png" alt="twitter"></a></li>
      <li><a href="" title="pinterest" target="_blank"><img src="/assets/images/icons/pinterest.png" alt="pinterest"></a></li>
      <li><a href="{{@blog.url}}/rss" title="rss" target="_blank"><img src="/assets/images/icons/rss.png" alt="rss"></a></li>
      </ul>
    </div>

</div>
</div>

{{! Logo }}

    <div class="row">
    <div class="small-12 columns">
     <a href="{{@blog.url}}">
     <h1 class="text-center logo">
     {{#if @blog.logo}}
    <img src="{{@blog.logo}}" alt="{{@blog.title}}"/>
    {{else}}
    {{@blog.title}}
    {{/if}}
    </h1></a>
     
     <p class="text-center motto">{{@blog.description}}</p>
    </div>
  </div>

</div>

    {{{body}}}

   <footer class="row">
    <div class="small-12 columns">
      <hr />
      <div class="row">
        <div class="small-12 columns">
          <p class="text-center">Copyright 2013 Quarter.  Published with <a href="http://ghost.org">Ghost</a></p>
        </div>
      </div>
